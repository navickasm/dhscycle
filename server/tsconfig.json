{
    "files": [
        "src/index.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "incremental": true,
        "allowUnreachableCode": false
    }
}